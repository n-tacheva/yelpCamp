<%- include("../partials/header") %>
<link rel="stylesheet" href="/comments/newComment.css">
<div class="container">
    <div class="row">
        <div class=" col-lg-12" style="text-align: center;">
            <h2>Add new comment to <%= campground.name %></h2>
        </div>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments " method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
                <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>
    </div>
    </form>
</div>
</div>
</div>

<%- include("../partials/footer") %>