<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>


        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-responsive" src="<%= campground.image%> ">
                <div class="campground-description">
                    <h4 class="float-right">$9.00/night</h4>
                    <a href="#">
                        <h4><%= campground.name %></h4>
                    </a>
                    <p class="author">
                        <em> Added by <%= campground.author.username %> </em>
                    </p>
                </div>
                <div class="campground-description"><%= campground.description %> </div>
            </div>
            <br>
            <div class="card bg-light">
                <div class="card-header text-right">
                    <a class="btn btn-md btn-secondary" href="/campgrounds/<%= campground._id %>/comments/new">Add
                        comment</a>
                </div>
                <div class="card-body">
                    <%campground.comments.forEach((comment)=>{ %>
                    <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right">5 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <hr>
                        <% })%>
                    </div>
                </div>
            </div>
            </div>            
        </div>
    </div>
</div>
<%- include("../partials/footer") %>