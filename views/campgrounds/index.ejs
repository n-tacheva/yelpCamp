<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked of campgrounds from all over the world</p>
            <a class="btn btn-primary btn-md" href="/campgrounds/new">Add a new campground</a>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <%campgrounds.forEach(campground => {%>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <figure class="figure">
                    <img src="<%= campground.image%> " class="figure-img img-fluid" alt="...">
                    <figcaption class="figure-caption"><%=campground.name%></figcaption>
                </figure>
                <p><a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">More</a></p>
            </div>
        </div>
        <%}); %>
    </div>
</div>
<%- include("../partials/footer") %>